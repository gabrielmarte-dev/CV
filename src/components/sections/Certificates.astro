---
import Section from "../Section.astro";

import { certificates } from "@cv_spanish";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, issuer, date, url }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    {url ? (
                      <a
                        href={url}
                        target="_blank"
                        title={`Ver el certificado ${name}`}
                      >
                        {name}
                      </a>
                    ) : (
                      name
                    )}
                  </h3>
                </div>

                <time>{date}</time>
              </header>

              <footer>
                <p>{issuer}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    text-align: right;
  }
</style>
